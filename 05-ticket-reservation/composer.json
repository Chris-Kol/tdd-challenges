{
  "name": "backend-chapter/ticket-reservation-challenge",
  "description": "TDD Challenge: Ticket Reservation System",
  "type": "project",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "spatie/phpunit-watcher": "^1.23"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:watch": "phpunit-watcher watch",
    "test:coverage": "phpunit --coverage-html coverage"
  }
}